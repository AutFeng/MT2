<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@android:color/white">

    <TextView
        android:id="@+id/menu_refresh"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="刷新"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:gravity="center_vertical"
        android:paddingStart="14dp"
        android:paddingEnd="14dp"
        android:drawablePadding="8dp"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        app:drawableStartCompat="@drawable/baseline_refresh_24"
        app:drawableTint="@color/black" />

    <TextView
        android:id="@+id/menu_search"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="搜索"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:gravity="center_vertical"
        android:paddingStart="14dp"
        android:paddingEnd="14dp"
        android:drawablePadding="8dp"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        app:drawableStartCompat="@drawable/baseline_search_24"
        app:drawableTint="@color/black" />

    <TextView
        android:id="@+id/menu_select_all"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="全选"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:gravity="center_vertical"
        android:paddingStart="14dp"
        android:paddingEnd="14dp"
        android:drawablePadding="8dp"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        app:drawableStartCompat="@drawable/baseline_select_all_24"
        app:drawableTint="@color/black" />

    <TextView
        android:id="@+id/menu_filter"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="过滤"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:gravity="center_vertical"
        android:paddingStart="14dp"
        android:paddingEnd="14dp"
        android:drawablePadding="8dp"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        app:drawableStartCompat="@drawable/baseline_filter_list_24"
        app:drawableTint="@color/black" />

    <TextView
        android:id="@+id/menu_sort"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="排序方式"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:gravity="center_vertical"
        android:paddingStart="14dp"
        android:paddingEnd="14dp"
        android:drawablePadding="8dp"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        app:drawableStartCompat="@drawable/baseline_sort_24"
        app:drawableTint="@color/black" />

    <TextView
        android:id="@+id/menu_terminal"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="打开终端"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:gravity="center_vertical"
        android:paddingStart="14dp"
        android:paddingEnd="14dp"
        android:drawablePadding="8dp"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        app:drawableStartCompat="@drawable/baseline_terminal_24"
        app:drawableTint="@color/black" />

    <TextView
        android:id="@+id/menu_hidden_files"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="隐藏文件"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:gravity="center_vertical"
        android:paddingStart="14dp"
        android:paddingEnd="14dp"
        android:drawablePadding="8dp"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        app:drawableStartCompat="@drawable/baseline_visibility_off_24"
        app:drawableTint="@color/black" />

    <TextView
        android:id="@+id/menu_bookmark"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="添加书签"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:gravity="center_vertical"
        android:paddingStart="14dp"
        android:paddingEnd="14dp"
        android:drawablePadding="8dp"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        app:drawableStartCompat="@drawable/baseline_bookmark_add_24"
        app:drawableTint="@color/black" />

    <TextView
        android:id="@+id/menu_set_home"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="设为首页"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:gravity="center_vertical"
        android:paddingStart="14dp"
        android:paddingEnd="14dp"
        android:drawablePadding="8dp"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        app:drawableStartCompat="@drawable/baseline_home_24"
        app:drawableTint="@color/black"  />

    <TextView
        android:id="@+id/menu_settings"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="设置"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:gravity="center_vertical"
        android:paddingStart="14dp"
        android:paddingEnd="14dp"
        android:drawablePadding="8dp"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        app:drawableStartCompat="@drawable/baseline_settings_24"
        app:drawableTint="@color/black" />

    <TextView
        android:id="@+id/menu_exit"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="退出"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:gravity="center_vertical"
        android:paddingStart="14dp"
        android:paddingEnd="14dp"
        android:drawablePadding="8dp"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        app:drawableStartCompat="@drawable/baseline_exit_to_app_24"
        app:drawableTint="@color/black" />
</LinearLayout>
