<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@color/toolbar">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/menuIcon"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:layout_gravity="start"
                    android:layout_marginStart="-9.5dp"
                    android:padding="8dp"
                    android:src="@drawable/baseline_menu_32"
                    app:tint="@color/white" />

                <LinearLayout
                    android:id="@+id/TextBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical"
                    android:paddingStart="11dp"
                    tools:ignore="RtlSymmetry">

                    <TextView
                        android:id="@+id/currentPathTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/storageInfoTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="2dp"
                        android:textColor="@color/white"
                        android:textSize="11sp" />
                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_gravity="end"
                android:layout_marginEnd="3.5dp"
                android:padding="8dp"
                android:src="@drawable/baseline_more_vert_32"
                app:tint="@color/white" />
        </androidx.appcompat.widget.Toolbar>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <bin.mt2.plus.widget.PullRefreshLayout
                    android:id="@+id/pullRefreshLeft"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <bin.mt2.plus.widget.FastScrollRecyclerView
                        android:id="@+id/recyclerViewLeft"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/white" />
                </bin.mt2.plus.widget.PullRefreshLayout>

                <bin.mt2.plus.widget.BezierGradientView
                    android:id="@+id/left_gradientTop"
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    android:alpha="0.4"
                    android:visibility="gone"
                    app:layout_constraintTop_toTopOf="parent" />

                <bin.mt2.plus.widget.BezierGradientView
                    android:id="@+id/left_gradientBottom"
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    android:alpha="0.4"
                    android:visibility="gone"
                    app:direction="bottom_to_top"
                    app:layout_constraintBottom_toBottomOf="parent" />

                <bin.mt2.plus.widget.BezierGradientView
                    android:id="@+id/left_gradientRight"
                    android:layout_width="4dp"
                    android:layout_height="match_parent"
                    android:alpha="0.4"
                    android:visibility="gone"
                    app:direction="right_to_left"
                    app:layout_constraintEnd_toEndOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <bin.mt2.plus.widget.PullRefreshLayout
                    android:id="@+id/pullRefreshRight"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <bin.mt2.plus.widget.FastScrollRecyclerView
                        android:id="@+id/recyclerViewRight"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/white" />
                </bin.mt2.plus.widget.PullRefreshLayout>

                <bin.mt2.plus.widget.BezierGradientView
                    android:id="@+id/right_gradientTop"
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    android:alpha="0.4"
                    android:visibility="gone"
                    app:layout_constraintTop_toTopOf="parent" />

                <bin.mt2.plus.widget.BezierGradientView
                    android:id="@+id/right_gradientBottom"
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    android:alpha="0.4"
                    android:visibility="gone"
                    app:direction="bottom_to_top"
                    app:layout_constraintBottom_toBottomOf="parent" />

                <bin.mt2.plus.widget.BezierGradientView
                    android:id="@+id/right_gradientLeft"
                    android:layout_width="4dp"
                    android:layout_height="match_parent"
                    android:alpha="0.4"
                    android:visibility="gone"
                    app:direction="left_to_right"
                    app:layout_constraintStart_toStartOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="@android:color/darker_gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:scaleType="centerInside"
                    android:src="@drawable/baseline_keyboard_arrow_left_24"
                    app:tint="@color/gray" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:scaleType="centerInside"
                    android:src="@drawable/baseline_keyboard_arrow_right_24"
                    app:tint="@color/gray" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:scaleType="centerInside"
                    android:src="@drawable/baseline_add_24"
                    app:tint="@color/gray" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:scaleType="centerInside"
                    android:src="@drawable/baseline_arrow_team_24"
                    app:tint="@color/gray" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:scaleType="centerInside"
                    android:src="@drawable/baseline_arrow_upward_24"
                    app:tint="@color/gray" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigationView"
        android:layout_width="328dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/nav_header">

        <!-- Other navigation view content -->

    </com.google.android.material.navigation.NavigationView>
</androidx.drawerlayout.widget.DrawerLayout>