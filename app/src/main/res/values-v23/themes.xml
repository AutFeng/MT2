<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Base.AppTheme">
        <!-- Transparent system bars for edge-to-edge. -->
        <item name="android:navigationBarColor">@color/white</item>
        <item name="android:statusBarColor">@color/toolbar</item>
        <item name="android:windowLightStatusBar">?attr/isLightTheme</item>
    </style>

    <style name="DialogScaleAnimation" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/dialog_scale_in</item>
        <item name="android:windowExitAnimation">@anim/dialog_dim_out</item> <!-- 可选的退出动画 -->
    </style>
</resources>